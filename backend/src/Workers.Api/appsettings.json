{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Database=workers-db;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "Secret": "REPLACE_WITH_STRONG_SECRET_AT_LEAST_32_BYTES",
    "Issuer": "Workers.Api",
    "Audience": "Workers.Client",
    "ExpiryMinutes": 10,
    "RefreshTokenExpiryDays": 7
  }
}